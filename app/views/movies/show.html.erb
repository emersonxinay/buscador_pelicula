<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @movie %>

  <div>
    <%= link_to "Edit this movie", edit_movie_path(@movie), class:"btn btn-success my-2" %> |
    <%= link_to "Back to movies", movies_path, class:"btn btn-primary my-2" %>

    <%= button_to "Destroy this movie", @movie, method: :delete, class:"btn btn-danger my-2" %>
  </div>

</div>
